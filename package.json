    "eslint": "^7.18.0",
    "gulp": "^4.0.2",
    "gulp-less": "^4.0.1",
    "husky": "^4.3.7",
    "rimraf": "^3.0.2",
    "standard-version": "^9.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "glob-to-regexp": "^0.4.1",
    "gulp-util": "^3.0.8"
  }
